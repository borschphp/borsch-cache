{
  "name": "borschphp/cache",
  "description": "A simple PSR-6 and PSR-16 implementation.",
  "license": "MIT",
  "keywords": [
    "psr",
    "psr-6",
    "psr-16",
    "cache"
  ],
  "authors": [
    {
      "name": "Alexandre DEBUSSCHERE",
      "email": "alexandre@kosmonaft.dev"
    }
  ],
  "type": "library",
  "require": {
    "php": "^8.2",
    "psr/cache": "^3.0",
    "psr/simple-cache": "^3.0",
    "psr/log": "^3.0",
    "doctrine/collections": "^2.3"
  },
  "require-dev": {
    "pestphp/pest": "^3.8",
    "phpstan/phpstan": "^2.1"
  },
  "autoload": {
    "psr-4": {
      "Borsch\\Cache\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "BorschTest\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
